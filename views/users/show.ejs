<%- include("../partials/header") %>

<section class="profile-page container">

    <section class="user">
        <div class="main-detail d-flex align-items-center justify-content-center text-center border pt-5 pb-4">
            <div class="row">
                <div class="col-4 my-4 mx-auto">
                    <img src="https://image.freepik.com/free-vector/businessman-character-avatar-isolated_24877-60111.jpg" 
                    alt="profile-image" class="rounded-circle img-thumbnail profile-image">
                </div>
                <div class="col-12 name">
                    <h1><%=user.name%></h1>
                </div>
                <div class="col-12 profession">
                    <h1 class="text-muted">Coder/Sportperson</h1>
                </div>
            </div>
        </div>
        <div class="sec-detail border py-3">
            <div class="row text-center">
                <div class="col-4">
                    <h1><%=user.blogs.length%></h1>
                    <h2 class="text-muted">posts</h2>
                </div>
                <div class="col-4">
                    <h1>4k</h1>
                    <h2 class="text-muted">Followers</h2>
                </div>
                <div class="col-4">
                    <h1>2k</h1>
                    <h2 class="text-muted">Following</h2>
                </div>
            </div>
        </div>
    </section>

    <section class="post">
        <% user.blogs.forEach(function(blog){  %>
            <div class="border my-4 p-4">
                    <h4 class="font-weight-light username m-0"><%= blog.creator.username %></h4>
                    <p class="text-muted"><%= blog.created.toDateString() %></p>
                    <a href="/blogs/<%=blog._id%>" class="text-decoration-none">
                        <div class="user-blog-image" 
                        style="background-image: url('<%=blog.image%>');">
                        </div>
                        <h3 class="mt-4 text-dark"><%= blog.title %></h3>
                        <h4 class="text-dark"><%- blog.content %></h4>
                    </a>
                    <a href="/blogs/<%=blog._id%>" class="mt-3 text-decoration-none text-muted">read more...</a>
                    <div class="d-flex justify-content-between post-response mt-3">
                        <p class="m-0 text-muted"><span>Likes: </span><%- blog.likes.length %></p>
                        <p class="m-0 text-muted"><span>Comments: </span><%- blog.comments.length %></p>
                    </div>
            </div>
        <% }); %>
    </section>
</section>

<%- include("../partials/footer") %>