<%- include("../partials/header") %>

<div class="container py-4">
    <h1 class="display-5">
        EDIT <strong><%= blog.title %></strong>
    </h1>
    <div class="border p-4 mt-4">
        <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input type="text" class="form-control" name="blog[title]" value="<%= blog.title %>" required>
            </div>
            <div class="form-group">
                <input type="text" class="form-control" name="blog[image]" value="<%= blog.image %>" required>
            </div>
            <div class="form-group">
                <textarea name="blog[content]" class="form-control" cols="30" rows="10" required><%= blog.content %></textarea>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
    <a href="/blogs/<%=blog._id%>" class="btn btn-success">Back</a>
</div>

<%- include("../partials/footer") %>